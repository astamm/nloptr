bibentry(bibtype = "Manual",
         header = paste("If you use NLopt in work that leads to a publication,",
                        "we would appreciate it if you would kindly cite NLopt",
                        "in your manuscript. Please cite both the NLopt library",
                        "and the authors of the specific algorithm(s) that you",
                        "employed in your work. Cite NLopt as:"),
         author = person(given = "Steven G.", family = "Johnson"),
         title = "The NLopt nonlinear-optimization package",
         year = "2008",
         url = "https://github.com/stevengj/nlopt",
         footer = paste("The authors and appropriate citations for the specific",
                        "optimization algorithms in NLopt are listed in the",
                        "NLopt Algorithms page.")
)
